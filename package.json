{
  "name": "cfn-resolver-cli",
  "version": "1.1.1",
  "description": "CLI to resolve AWS Cloudformation templates",
  "main": "index.js",
  "scripts": {
    "test": "mocha --recursive",
    "coverage": "nyc --all --reporter cobertura --reporter text --report-dir ./coverage npm run test",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "pretest": "npm link",
    "posttest": "npm unlink"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robessog/cfn-resolver-cli.git"
  },
  "keywords": [
    "CFN",
    "CloudFormation",
    "AWS",
    "resolve",
    "debug",
    "troubleshoot",
    "test",
    "CLI"
  ],
  "bin": {
    "cfn-resolver": "./cli.js"
  },
  "author": "robessog",
  "license": "ISC",
  "dependencies": {
    "cfn-resolver-lib": "^1.1.2",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "js-yaml": "^3.13.1",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.6.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1"
  }
}
